---
import type { HTMLAttributes } from "astro/types";
import { cn } from "~/lib/utils";
type Props = HTMLAttributes<"textarea">;
const { class: className, ...rest } = Astro.props;
---

<textarea
  rows={4}
  class={cn(
    "block w-full rounded-md transition border-0 py-3 text-primary shadow-sm ring-1 ring-inset ring-muted-foreground placeholder:text-muted-foreground focus:ring-2 focus:ring-inset focus:ring-accent sm:leading-6 resize-y",
    className
  )}
  maxlength={1000}
  {...rest}></textarea>
