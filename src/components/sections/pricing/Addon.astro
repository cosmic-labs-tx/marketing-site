---
import { Icon } from "astro-icon/components";
import type { addons } from "~/constants";
type Props = (typeof addons)[number];

const { id, name, price, description } = Astro.props;
---

<div
  class="flex flex-col justify-between rounded-3xl p-8 ring-1 ring-white/10 transition-shadow duration-300 ease-out hover:shadow-[0_0_30px_10px_var(--green)]"
>
  <h3 id={id} class="text-lg font-medium text-white">
    {name}
  </h3>
  <p class="text-gray-300 mt-1 text-sm">{description}</p>
  <p class="mt-4 flex items-center gap-1 text-lg font-bold tracking-wider text-accent-light">
    <Icon name="tabler:plus" />
    {price}
  </p>
</div>
