---
import type { HTMLAttributes } from "astro/types";
import { cn } from "~/lib/utils";
type Props = HTMLAttributes<"a"> & {
  href: string;
};

const { href, class: className, ...rest } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
const isActive = href === currentPath;
---

<a
  data-type="top-nav-link"
  class:list={cn(
    isActive
      ? "border-accent text-accent focus-visible:outline-accent"
      : "border-transparent focus-visible:outline-primary",
    "border-b-[3px] font-medium transition duration-75 hover:text-accent focus-visible:outline-2",
    className
  )}
  href={href}
  {...rest}><slot /></a
>
