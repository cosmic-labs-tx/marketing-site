---
import type { HTMLAttributes } from "astro/types";
import { cn } from "~/lib/utils";
type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;
const isActive = href === currentPath;
---

<a
  class:list={cn(
    isActive ? "active border-accent focus-visible:outline-accent" : "border-transparent focus-visible:outline-primary",
    "border-b-[3px] font-medium transition duration-75 hover:text-accent focus-visible:outline-2",
    className
  )}
  href={href}
  {...props}><slot /></a
>

<style>
  .active {
    color: hsl(var(--accent));
  }
</style>
