---
import { Image } from "astro:assets";
import waves from "~/assets/waves.png";
import Hero from "~/components/sections/Hero.astro";
import Services from "~/components/sections/Services.astro";
import Layout from "~/layouts/Layout.astro";
---

<Layout meta={{ title: "Home", description: "A starter template for Friendly Bear Labs Clients" }}>
  <main id="#main" class="relative space-y-48 lg:space-y-72">
    <Hero />
    <Services />
  </main>
  <Image src={waves} alt="An image of purple waves" class="fixed inset-0 z-[-1] max-h-full" />
</Layout>
