---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import BackToTop from "~/components/BackToTop.astro";
import Footer from "~/components/Footer.astro";
import Header from "~/components/Header.astro";
import { SITE_TITLE } from "~/config";
import "~/global.css";
type Props = {
  meta: {
    title: string;
    description: string;
  };
};

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const {
  meta: { title, description },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <title>{title} ‚Ä¢ {SITE_TITLE}</title>
    <meta name="description" content={description} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üêª</text></svg>"
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Wix+Madefor+Display:wght@400;500;600;700;800&display=swap"
    />

    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </head>
  <body class="flex h-full min-h-full flex-col text-primary">
    <Header sticky />
    <div class="grow px-[--page-px] sm:px-0">
      <slot />
    </div>
    <Footer />
    <BackToTop />
  </body>
</html>
